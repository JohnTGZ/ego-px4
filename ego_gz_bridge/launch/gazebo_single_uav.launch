<launch>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>
  <arg name="world_name" default="$(find ego_gz_bridge)/simulation/worlds/ego_test.world"/>
  <arg name="model" default="iris_depth_camera"/>
    
