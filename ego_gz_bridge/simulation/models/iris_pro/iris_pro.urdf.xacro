<?xml version="1.0" ?>
<robot name="iris_pro" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find ego_gz_bridge)/simulation/models/iris_pro/common_properties.xacro"/>
  <xacro:include filename="$(find ego_gz_bridge)/simulation/models/iris_pro/iris_pro.gazebo.xacro"/>

  <!-- <xacro:property name="r200_cam_rgb_px" value="0.005"/>
  <xacro:property name="r200_cam_rgb_py" value="0.018"/>
  <xacro:property name="r200_cam_rgb_pz" value="0.013"/>
  <xacro:property name="r200_cam_depth_offset" value="0.01"/> -->

  <!-- ======== -->
  <!-- Links -->
  <!-- ======== -->

  <link name="base_link">
    <visual>
      <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ego_gz_bridge/simulation/models/iris_pro/meshes/iris.stl" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.47 0.47 0.11"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.5"/>
      <inertia ixx="0.029125" ixy="0" ixz="0"
               iyy="0.029125" iyz="0" izz="0.055225" />
    </inertial>
  </link>

  <link name="/imu_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.015"/>
      <inertia ixx="1e-05" ixy="0" ixz="0"
               iyy="1e-05" iyz="0" izz="1e-05" />
    </inertial>
  </link>

  <link name="rotor_0">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ego_gz_bridge/simulation/models/iris_pro/meshes/iris_prop_ccw.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.128"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0"
               iyy="0.000273104" iyz="0" izz="0.000274004" />
    </inertial>
  </link>

  <link name="rotor_1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ego_gz_bridge/simulation/models/iris_pro/meshes/iris_prop_ccw.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.128"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0"
               iyy="0.000273104" iyz="0" izz="0.000274004" />
    </inertial>
  </link>

  <link name="rotor_2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ego_gz_bridge/simulation/models/iris_pro/meshes/iris_prop_cw.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.128"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0"
               iyy="0.000273104" iyz="0" izz="0.000274004" />
    </inertial>
  </link>

  <link name="rotor_3">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ego_gz_bridge/simulation/models/iris_pro/meshes/iris_prop_cw.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.128"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0"
               iyy="0.000273104" iyz="0" izz="0.000274004" />
    </inertial>
  </link>

  <link name="camera_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.015"/>
      <inertia ixx="1e-05" ixy="0" ixz="0"
               iyy="1e-05" iyz="0" izz="1e-05" />
    </inertial>
  </link>

  <link name="gps_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.002"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.015"/>
      <inertia ixx="1e-05" ixy="0" ixz="0"
               iyy="1e-05" iyz="0" izz="1e-05" />
    </inertial>
  </link>

  <!-- ======== -->
  <!-- Joints -->
  <!-- ======== -->

  <!-- ///// Motors ///// -->

  <joint name="rotor_0_joint" type="continuous">
    <origin xyz="0.13 -0.22 0.023" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="rotor_0"/>
  </joint>

  <joint name="rotor_1_joint" type="continuous">
    <origin xyz="-0.13 0.22 0.023" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="rotor_1"/>
  </joint>

  <joint name="rotor_2_joint" type="continuous">
    <origin xyz="0.13 0.22 0.023" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="rotor_2"/>
  </joint>

  <joint name="rotor_3_joint" type="continuous">
    <origin xyz="-0.13 -0.22 0.023" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="rotor_3"/>
  </joint>

  <joint name="base_link_to_camera_joint" type="fixed">
    <origin xyz="0.1 0.0 0.0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera_link"/>
  </joint>

  <joint name="base_link_to_imu_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="/imu_link"/>
  </joint>

  <joint name='gps_joint' type='fixed'>
    <origin xyz="0.1 0.0 0.0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="gps_link"/>
  </joint>
  

</robot>
